<div class="container justify-content-center">
  <h1 class="text-center main-title">Harmonic</h1>
  <h4 class="text-center">A Dedicated App For Connecting Musicians</h4>

  <!-- CAROUSEL -->
  <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselIndicators" data-slide-to="1"></li>
      <li data-target="#carouselIndicators" data-slide-to="2"></li>
      <li data-target="#carouselIndicators" data-slide-to="3"></li>
      <li data-target="#carouselIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://i.imgur.com/2r39ISV.jpg" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
            <h4 class="carousel-text">HARMONIZE</h4>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 carousel-img" src="https://i.imgur.com/px498Jx.jpg" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
          <h4 class="carousel-text">HARMONIZE</h4>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 carousel-img" src="https://i.imgur.com/OBO3ReS.jpg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <h4 class="carousel-text">HARMONIZE</h4>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 carousel-img" src="https://i.imgur.com/vsxAceV.jpg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <h4 class="carousel-text">HARMONIZE</h4>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 carousel-img" src="https://i.imgur.com/33KFi6j.jpg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <h4 class="carousel-text">HARMONIZE</h4>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  
  <!-- TAGLINE -->
  <div class="container tagline ">
    <p class="text-center my-auto">WHERE THE <B>LENNON</B> TO YOUR <B>MCCARTNEY</B> IS ONLY A CLICK AWAY</p>
  </div>  

  <!-- CALL TO ACTION: LOGIN/SIGNUP or START SEARCH -->
  <div class="container row d-flex justify-content-center">
    <% if (currentUser) { %>
      <form class="btn-form" method="get" action="search/">
        <input class="btn btn-info" type="submit" value="START YOUR SEARCH" />
      </form>
    <% } else { %>
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#loginModal">
        LOGIN
      </button>
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#signupModal">
        SIGNUP
      </button>
      <% }  %>
  </div>
</div>

<%- include("partials/modals") %>