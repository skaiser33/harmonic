<div class="container">
  <form class="form-small" action="/auth/signup" method="POST">
    <div class="form-group col-md-4">
      <div class="d-flex flex-column">
    <label for="new-email">Email</label>
    <input id="new-email" type="email" name="email" placeholder="Enter email">
  </div>  
</div>  
<div class="form-group col-md-4">
  <div class="d-flex flex-column">
    <label for="new-password">Password</label>
    <input id="new-password" type="password" name="password" placeholder="Create Password">
  </div>  
</div>  
<div class="form-group col-md-4">
  <div class="d-flex flex-column">
    <h3>Are you creating an account for...?</h3>

    <div class="form-check form-check-inline">      
      <input class="form-check-input" type="radio" name="isBand" id="isBandFalse" value=false checked>
      <label class="form-check-label" for="isBandFalse">An Individual Musician</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="isBand" id="isBandTrue" value=true>
      <label class="form-check-label" for="isBandTrue">A Band</label>
    </div>
  </div>  
</div>  
    <div class="form-group col-md-4">
      <input class="btn btn-secondary" type="submit" value="SIGN UP">
    </div> 
  </div>  
</form>
</div>



