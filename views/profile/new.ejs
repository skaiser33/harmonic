<div class="container">
  <h1>SET UP YOUR PROFILE</h1>
  <div class="container"></div>
  <form class="search-form" action="/profile/new/<%= user.id %>" method="POST"  novalidate>


  <!-- <h1 class="hide" id="toggle-test">TOGGLE TEST</h1>  
